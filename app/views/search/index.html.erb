<% content_for :page_title, "Plaques mentioning '" + @phrase + "'" %>
<% @page_title = "Search results for '" + @phrase + "'"  %>

<div class="panel clearfix">
  <h1>People or plaques matching &quot;<%= @phrase %>&quot;</h1>
</div>

<div class="panel">
  <%= render @search_results %>
</div>

<% if params[:from] && params[:from] == "submission" %>
  <div class="panel">Plaque not listed? <%= link_to "Add it", new_plaque_path(:checked => true) %>.</div>
<% else %>
  <div class="panel" id="search_results_footer">
    <h2>Can't find what you're looking for? Try another search or <%= link_to "add it", new_plaque_path(:checked => true) %></h2>
    <%= render :partial => "search_form", :locals => { :phrase => @phrase } %>
  </div>
<% end %>

