<% content_for :page_title, "Unphotographed plaques in " + @area.name %>
<h1>Unphotographed plaques in <%= link_to @area.name, area_path(@area) %></h1>
<script>
  showAll = false;
  thisUrl = "<%= url_for() %>";
</script>

<% unless @plaques.nil? %>
  <p>There <%= pluralize_is_or_are(@plaques.size, "plaque") %> in this area that <%= havent_or_hasnt(@plaques.size) %> been photographed yet.</p>

  <% if @plaques.size > 0 %>

  <div id="plaque-map" data-latitude="<%= @mean.latitude %>" data-longitude="<%= @mean.longitude %>"  data-zoom="<%= @zoom %>"></div>

  <% end %>

  <%= plaque_list(@plaques) %>
<% end %>