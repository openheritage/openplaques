<% content_for :page_title, "To do: people with no role" %>

<h1>To do: <%= @people.size.to_s %> people with no role</h1>
<p><%= link_to("All to-do lists", "/todo") %></p>

<% if @people.size > 0 %>
  <p>These people have no role:</p>
  <ul>
    <% @people.each do |person| %>
    <li><%= dated_person(person) %> <%= link_to "Add role", new_personal_role_path(person) %></li>
    <% end %>
  </ul>
<% else %>
  <p>There aren't any people with no role...</p>
<% end %>
<p class="clear"><%= link_to("All to-do lists", "/todo") %></p>