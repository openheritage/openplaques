<% content_for :page_title, "To do: plaques with no description" %>

<div class="panel">
  <h1>Unphotographed plaques</h1>
  <section class="admin_panel"><%= link_to("All to-do lists", "/todo") %></section>
  <%= will_paginate @plaques %>
  <ul>
    <% @plaques.each do |plaque| %>
    <li><%= link_to(plaque.title, plaque_path(plaque))  %> <%= truncate(plaque.inscription, :length => 80) %></li>
    <% end %>
  </ul>
</div>