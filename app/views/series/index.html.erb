<% content_for :page_title, "Historical plaques - by series" %>
<div class="panel">
  <h1>Plaques - by series</h1>

  <% if @series.size > 0 %>
    <%= content_tag("ul") do %>
      <% @series.each do |series| %>
        <%= content_tag("li", link_to(series.name, series_path(series))) %>
      <% end %>
    <% end %>
  <% end %>

  <%= button_to("New series", new_series_path, {:method => :get, :class => :button}) if current_user %>
</div>