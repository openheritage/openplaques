<% @page_title = "People - " + @index  %>

<div class="panel clearfix">
	<h1>People - <%= @index.upcase %></h1>

	<!-- TODO: Give the current letter a class of .selected -->
	<nav class="alphabet">
		<%= content_tag("ol") do %>
			<% for letter in "A".."Z" %>
				<%= content_tag("li", navigation_link_to(letter, people_by_index_path(letter.downcase))) %>
			<% end %>
		<% end %>
		
	</nav>
</div>


<%= content_tag("ol", :class => "results", :id => "people_results") do %>
	<% @people.each do |person| %>
		<%= content_tag("li") do %>
			<%= link_to dated_roled_person(person) %>
			<%= " - " + pluralize(person.plaques.size, "plaque") unless person.plaques.size <= 1 %>
		<% end %>
	<% end %>
<% end %>