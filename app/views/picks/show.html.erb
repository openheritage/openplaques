<% content_for :page_title, "plaque pick" %>

<div class="panel clearfix">
  <% if current_user && current_user.is_admin? %>
    <section class="admin_panel">
      <%= link_to("Edit this pick", edit_pick_path(@pick), {:class => :edit, :title => "Edit this pick"})%>
    </section>
  <% end %>
</div>

<div class="panel clearfix">
  <p><%= thumbnail_img(@pick) %></p>
  <p><%= link_to @pick.plaque.title, @pick.plaque %></p>
  <p>"<%= @pick.description %>"</p>
  <p>proposed by <%= @pick.proposer %></p>
  <% if @pick.feature_on %>
    <p>It would be great to feature it on <%= @pick.feature_on.strftime('%m/%d/%Y') %></p>
  <% end %>
  <% if @pick.last_featured %>
    <p>This has been featured plaque of the day <%= pluralize(@pick.featured_count, "time") %><% if @pick.featured_count > 1 %> and was last featured<% end %> on <%= @pick.last_featured.strftime('%m/%d/%Y') %>.</p>
  <% else %>
    <p>This has not been displayed as plaque of the day yet.
  <% end %>
</div>