<% content_for :page_title, "plaque pick" %>

<div class="panel clearfix">
  <% if current_user && current_user.is_admin? %>
    <section class="admin_panel">
      <%= link_to("Edit this pick", edit_pick_path(@pick), {:class => :edit, :title => "Edit this pick"})%>
    </section>
  <% end %>
</div>

<div class="panel clearfix">
  <p>plaque: <%= link_to @pick.plaque.title, @pick.plaque %></p>
  <p>description: <%= @pick.description %></p>
  <p>It would be great to feature it on <%= @pick.feature_on %></p>
  <p>last featured: <%= @pick.last_featured %></p>
  <p>This Pick has been featured plaque of the day <%= pluralize(@pick.featured_count, "time") %>.</p>
</div>