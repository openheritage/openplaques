<% content_for :page_title, "Plaque picks" %>
<div class="panel">
  <h1>Plaques Picks</h1>
  
  <% if @picks.size > 0 %>
    <p>Here are some of our top picks:</p>
    <ul>
      <% @picks.each do |pick| %>
      <li><%= link_to(pick.plaque.title, pick_path(pick)) %> '<%= pick.description %>' has been featured <%= pluralize(pick.featured_count, "time") %>.
      <% if pick.feature_on %>It would be great to feature it on <%= pick.feature_on %><% end %>
      </li>
      <% end %>
    </ul>
    <% else %>
    <p>There aren't any yet.</p>
  <% end %>

  <%= button_to("New pick", new_pick_path, {:method => :get, :class => :button}) if current_user %>
</div>