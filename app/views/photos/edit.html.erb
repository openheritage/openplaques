<% content_for :page_title, "Edit " + @photo.title %>

<div class="panel">
  <h1>Edit details of <%= link_to @photo.title, @photo %></h1>

  <%= form_for @photo do |f| %>
    <p><%= link_to(image_tag(@photo.file_url), @photo.url) %></p>
	<br/>
    <p><%= f.label :url %> <%= f.text_field :url, :maxlength => "100" %><%= link_to(@photo.url, @photo.url) %></p>
    <p><%= f.label :file_url %> <%= f.text_field :file_url, :maxlength => "100" %></p>
    <%= content_tag("p", "Taken on " + @photo.taken_at.to_s(:long)) unless @photo.taken_at.blank? %>
    <p><%= f.label :photographer %> <%= f.text_field :photographer %> <%= content_tag("span", link_to(@photo.photographer, photographer_url(@photo.photographer))) %></p>
    <p>The image was licenced by its copyright owner under a <%= link_to @photo.licence.name, @photo.licence %></p>
    <p>It depicts plaque number <%= f.text_field :plaque_id, :maxlength => "5" %> <%= link_to(@photo.plaque.title, @photo.plaque) %>
    <p>This is a <%= f.collection_select :shot, Photo.shots, :to_s, :to_s, :include_blank => true %> shot</p>

    <%= f.submit "Save", :class => "button" %>
  <% end %>

</div>