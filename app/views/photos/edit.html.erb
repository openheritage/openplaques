<% @page_title = "Edit photo \#" + @photo.id.to_s %>
<h1>Edit details of <%= link_to "Photo #" + @photo.id.to_s, @photo %></h1>

<% form_for @photo do |f| %>
  <%= content_tag("p", link_to(image_tag(@photo.file_url), @photo.url)) %>
  <p><%= f.label :file_url %> <%= f.text_field :file_url, :maxlength => "100" %></p>
  <p><%= f.label :url %> <%= f.text_field :url, :maxlength => "100" %></p>

  <%= content_tag("p", "Taken on " + @photo.taken_at.to_s(:long)) unless @photo.taken_at.blank? %>

  <p><%= f.label :photographer %> <%= f.text_field :photographer %> <%= content_tag("span", link_to(@photo.photographer, photographer_url(@photo.photographer))) %></p>

  <%= content_tag("p", "Licence: " + link_to(@photo.licence.name, @photo.licence)) %>
  <%= content_tag("p", "Commercial use: " + @photo.licence.allows_commercial_use.to_s) %>
  <%= content_tag("p", link_to("Plaque #" + @photo.plaque.id.to_s, @photo.plaque) + " " + @photo.plaque.inscription)%>

  <%= f.submit "Save" %>
<% end %>