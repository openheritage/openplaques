<% @page_title = "Login" %>
<h1><%= @page_title %></h1>

<% form_tag sesssion_path, :class => "login" do %>
<p><%= label_tag 'username' %> <%= text_field_tag 'login', @login %></p>

<p><%= label_tag 'password' %> <%= password_field_tag 'password', nil %></p>

<%= hidden_field_tag :from, params[:from] if params[:from] %>

<p><%= submit_tag 'Login' %></p>

<% end %>
