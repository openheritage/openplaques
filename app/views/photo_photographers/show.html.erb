<% content_for :page_title,  "Blue plaque photos by " + @photographer %>

<div class="panel">
  <p><%= pluralize(@photos.size,"photo") %></p>

  <ul class="photographer_photos>
    <% @photos.each do |photo| %>
      <li>
        <%= link_to(image_tag(photo.file_url, :height => '64', :width => '64'), photo) %>
        <%= link_to(photo.plaque.first_person || "Plaque #" + photo.plaque.id.to_s, photo.plaque)  %>
      </li>
    <% end %>
  </ul>
</div>