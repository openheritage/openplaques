<% content_for :page_title do %><%= @plaque.title %><% end %>

<% if current_user && current_user.is_admin? %>
  <section class="admin_panel">
    <%= link_to("Edit this plaque", edit_plaque_path(@plaque), {:class => :edit, :title => "Edit this plaque"})%>
  </section>
<% end %>

<div class="panel clearfix">
  <% foreign = true if @plaque.language_id != 1 %>
  <% if foreign == true %><div class="goog-trans-section" lang=""><% end %>
    <%=
      plaque_class = @plaque.inscription.length > 250 ? "large_inscription" : "inscription"
      content_tag("h1", new_linked_inscription(@plaque), {:class => plaque_class, :property => "op:inscription"})
    %>
    <% if foreign == true %><div class="goog-trans-control"></div>
    </div>
    <script>
    function googleSectionalElementInit() {
      new google.translate.SectionalElement({
        sectionalNodeClassName: 'goog-trans-section',
        controlNodeClassName: 'goog-trans-control',
        background: '#f4fa58'
      }, 'google_sectional_element');
    }
    </script>
    <script src="http://translate.google.com/translate_a/element.js?cb=googleSectionalElementInit&ug=section&hl=en"></script>
  <% end %>
</div>

<div class="panel clearfix">

  <% if @plaque.photos.empty? %>
<!--TODO: Incorporate streetview imagery -->
    <section id="plaque_no_photos">
      <div class="no_photo">
        <h2>No photograph</h2>
        <p>To add a photo, publish it on Flickr and tag it: <%= @plaque.machine_tag %></p>
    <% if current_user %>
      <%= button_to "find on Flickr", :action => :flickr_search, :id => @plaque %>
    <% end %>
      </div>

      <% if @plaque.geolocated? %>

      <div class="no_photo_geo">

        <%= image_tag(google_maps_path(@plaque.latitude, @plaque.longitude, {:width => 245, :height => 250, :zoom => 16, :styles =>
          {
            :road =>
              {:all =>
                {:lightness => "30"}
              },
              "road.arterial" =>
                {:all =>
                  {:hue => "0x003bff"}
                },
              :poi =>
                {:all =>
                  {:visibility => :simplified}
                },
              :landscape =>
                {:all =>
                  {:hue => "0x003bff"}
                }
              }
            }
          )) %>

          <%= image_tag(google_maps_path(@plaque.latitude, @plaque.longitude, {:width => 245, :height => 250, :zoom => 10, :styles =>
            {
              :road =>
                {:all =>
                  {:lightness => "30"}
                },
                "road.arterial" =>
                  {:all =>
                    {:hue => "0x003bff"}
                  },
                :poi =>
                  {:all =>
                    {:visibility => :simplified}
                  },
                :landscape =>
                  {:all =>
                    {:hue => "0x003bff"}
                  }
                }
              }
            )) %>

      </div>



      <% else %>
        <div class="no_location">
          <h2>Map location unknown</h2>
          <p>We haven't located this plaque on a map yet. <!--a href="#">Locate this plaque</a--></p>
        </div>
      <% end %>
    </section>

    <section id="plaque_identifier" class="plaque_info_panel">
      <%= render "plaque_header" %>
      <%= render "plaque_details" %>
    </section>

  <% elsif @plaque.photos.size < 2 %>

    <div class="plaque_image plaque_single_image">

      <% photo = @plaque.main_photo %>
      <%= link_to(image_tag(photo.file_url, {:alt => "Photo of plaque", :rel => "foaf:depiction"}), photo.url) %>

      <div id="photo_information" class="clearfix">
        <p class="photo_credit">Photographed by
        <% if photo.photographer_url %>
          <%= link_to(photo.photographer, photo.photographer_url) %>
        <% else %>
          <%= photo.photographer %>.
        <% end %></p>
        <p class="photo_licence"><%= link_to(photo.licence.name, photo.licence.url) %></p>
      </div>
    </div>

    <section id="plaque_identifier" class="plaque_info_panel">

      <%= render "plaque_header" %>

      <% if @plaque.geolocated? %>
        <%= image_tag(google_maps_path(@plaque.latitude, @plaque.longitude, {:zoom => 16, :styles =>
        {
          :road =>
            {:all =>
              {:lightness => "30"}
            },
            "road.arterial" =>
              {:all =>
                {:hue => "0x003bff"}
              },
            :poi =>
              {:all =>
                {:visibility => :simplified}
              },
            :landscape =>
              {:all =>
                {:hue => "0x003bff"}
              }
            }
          }
        )) %>
      <% end %>

      <%= render "plaque_details" %>
      <% # render "contributor_details" %>

    </section>

  <% else %>


      <div class="plaque_image plaque_multiple_images">
      <% first_photo = @plaque.main_photo %>
        <%= link_to(image_tag(first_photo.file_url, {:id => "primary_image", :alt => "Photo of plaque", :rel => "foaf:depiction"}), first_photo.url) %>

        <div id="secondary_images">
        <% @plaque.photos.detail_order.each do |image| %>
          <%= link_to(image_tag(image.file_url, {:alt => "Photo of plaque", :rel => "foaf:depiction"}), image.url) unless image == first_photo %>
        <% end %>

        </div>

      </div>

    <section id="plaque_identifier" class="plaque_info_panel">

        <%= render "plaque_header" %>

        <% if @plaque.geolocated? %>
          <%= image_tag(google_maps_path(@plaque.latitude, @plaque.longitude, {:zoom => 16, :styles =>
          {
            :road =>
              {:all =>
                {:lightness => "30"}
              },
              "road.arterial" =>
                {:all =>
                  {:hue => "0x003bff"}
                },
              :poi =>
                {:all =>
                  {:visibility => :simplified}
                },
              :landscape =>
                {:all =>
                  {:hue => "0x003bff"}
                }
              }
            }
          )) %>
        <% end %>

        <%= render "plaque_details" %>
        <% #= render "contributor_details" %>

      </section>

  <% end %>

</div>

<% unless @plaque.description.blank? %>
  <div class="panel clearfix  info">
      <div class="description" id="description">
        <%= simple_format(h(@plaque.description)) %>
      </div>
  </div>
<% end %>

<div id="plaques_nearby"></div>

<div<%= " class=\"" + @plaque.colour.name + "plaque\"" if @plaque.colour %> about="#this" typeof="op:Plaque">



</div>

<p class="alternate_formats">Data about this plaque as <%= alternate_link_to "XML", plaque_path(@plaque, :xml), :xml %> <%= alternate_link_to "JSON", plaque_path(@plaque, :json), :json %> <% if @plaque.geolocated? %><%= alternate_link_to "KML", plaque_path(@plaque, :kml), :kml %> <%= alternate_link_to "GMAP", "http://maps.google.co.uk/maps?q=" + plaque_url(@plaque, :kml), :html %><% end %></p>