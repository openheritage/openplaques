<% content_for :page_title, "Commemorated people who were alive in " + @year.year.to_s  %>
<h1><%=pluralize(@people.size, "Commemorated person") %> alive in <%= @year.year.to_s %></h1>

<ul>
<% @people.each do |person| %>
  <li><%= link_to dated_roled_person(person) %> aged c.<%= person.age_in(@year.year) %></li>
<% end %>
</ul>