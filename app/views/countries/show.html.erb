<% content_for :page_title, "Historical plaques in " + @country.name %>

<div class="panel clearfix">
  <h1>Plaques in <%= @country.name %></h1>

  <%= pluralize @country.plaques.size, "plaque" %>
</div>

  <% if @areas.size > 0 %>

    <%= content_tag("ol", :class => "results one_destination_results", :id => "people_results") do %>
      <% @areas.each do |area| %>
        <%= content_tag("li") do %>
          <%= link_to country_area_path(area.country, area) do %>
            <p class="result"><%= area.name %></p>
            <p class="count"><%= pluralize(area.plaques.size.to_s, "plaque") if area.plaques.size > 0 %></p>
          <% end %>
        <% end %>
      <% end %>
    <% end %>

  <% end %>

  <!--TODO: Turn these off when it doesnt make sense-->
  <p>See <%= link_to "unphotographed plaques", country_unphotographed_path(@country) %>.</p>

  <%= content_tag("p", link_to("Add new area", new_country_area_path(@country.alpha2))) if current_user && current_user.is_admin? %>
</div>




